<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.chengxusheji.domain">

	<class name="Yunshu" table="Yunshu">

          <!-- 主键记录id -->
          <id name="yunshuId" column="yunshuId">
            <generator class="native"/>
          </id>

          <!-- 多对一属性: 驾号 -->
          <many-to-one name="userObj"
            column="userObj"
            class="UserInfo"
            lazy="false"
            outer-join="true"
            cascade="save-update"
          />

          <!-- 多对一属性: 车牌 -->
          <many-to-one name="carObj"
            column="carObj"
            class="Car"
            lazy="false"
            outer-join="true"
            cascade="save-update"
          />

          <!-- 简单字符串属性: 运输货物 -->
          <property
            name="yshw"
            column="yshw"
            type="string"
            length="20"
          />

          <!-- 简单字符串属性: 重量(吨) -->
          <property
            name="zl"
            column="zl"
            type="string"
            length="20"
          />

          <!-- 简单字符串属性: 需要时间 -->
          <property
            name="xysj"
            column="xysj"
            type="string"
            length="20"
          />

          <!-- 简单字符串属性: 起始地 -->
          <property
            name="qsd"
            column="qsd"
            type="string"
            length="20"
          />

          <!-- 简单字符串属性: 目的地 -->
          <property
            name="mudidi"
            column="mudidi"
            type="string"
            length="20"
          />

          <!-- 简单字符串属性: 公里数 -->
          <property
            name="gonglishu"
            column="gonglishu"
            type="string"
            length="20"
          />

          <!-- 简单字符串属性: 运输备注 -->
          <property
            name="yunshuMemo"
            column="yunshuMemo"
            type="string"
            length="800"
          />


		 
		
	</class>
	
</hibernate-mapping>
 
